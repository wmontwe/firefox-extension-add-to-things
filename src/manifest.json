{
  "manifest_version": 3,

  "name": "Add Task to Things",
  "version": "1.0",
  "description": "A Firefox extension to add tasks to Things using the page title and URL.",

  "permissions": [
    "activeTab",
    "scripting"
  ],

  "action": {
    "default_title": "Add task to Things",
    "default_popup": "popup/add-task.html",
    "default_icon": "icons/add-task-48.png"
  },

  "commands": {
    "open-popup": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Open Add Task to Things Popup"
    }
  },

  "icons": {
    "48": "icons/add-task-48.png",
    "96": "icons/add-task-96.png",
    "256": "icons/add-task-256.png"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "{8303e42c-71da-4e8c-9517-22c41c4df23f}"
    },
    "strict_min_version": "109.0"
  }
}
